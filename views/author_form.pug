extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      //- p=(undefined===author._id ? '' : author.id)
      label(for='first_name') First Name:
      input#first_name.form-control(type='text' placeholder='First name' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
      br
      label(for='family_name') Family Name:
      input#family_name.form-control(type='text' placeholder='Surname' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))


    //- div.form-group
    //-   label(for='date_of_birth') Date of birth:
    //-   input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth_short) )
    //-   br
    //-   label(for='date_of_death') Date of death:
    //-   input#date_of_death.form-control(type='date' name='date_of_death' value=(undefined===author ? "" : author.date_of_death_short) )

    if !author
      div.form-group
        label(for='date_of_birth') Date of birth:
        input#date_of_birth.form-control(type='date' name='date_of_birth' value='' )
        br
        label(for='date_of_death') Date of death:
        input#date_of_death.form-control(type='date' name='date_of_death' value='' )
    else 
      div.form-group
      label(for='date_of_birth') Date of birth:
      if author.date_of_birth
        input#date_of_birth.form-control(type='date' name='date_of_birth' value=author.date_of_birth_short )
      else 
        input#date_of_birth.form-control(type='date' name='date_of_birth' value='' )

      br
      label(for='date_of_death') Date of death:
      if author.date_of_death        
        input#date_of_death.form-control(type='date' name='date_of_death' value=author.date_of_death_short )
      else 
        input#date_of_death.form-control(type='date' name='date_of_death' value='')

    button.btn.btn-primary(type='submit') Submit


  if errors
    ul
      for error in errors
        li!= error.msg